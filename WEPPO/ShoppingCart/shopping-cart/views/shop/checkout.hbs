
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center">Checkout Form</h2>
      <h4 class="text-center">Your Total: ${{total}}</h4>
      <form action="/checkout" method="post" id="checkout-form">
        <!-- Contact Information -->
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" id="name" required name="name">
        </div>

        <!-- Shipping Address -->
        <div class="form-group">
          <label for="address">Address</label>
          <input type="text" class="form-control" id="address" required name="address">
        </div>

        <!-- Payment Details -->
        <div class="form-group">
          <label for="creditCard">Credit Card Number</label>
          <input type="text" class="form-control" id="card-number" required name="cardNumber">
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="expiryDate">Expiry Date</label>
            <input type="text" class="form-control" id="card-expiry" required name="cardExpiry">
          </div>
          <div class="form-group col-md-6">
            <label for="cvv">CVV</label>
            <input type="text" class="form-control" id="cvv" required name="cvv">
          </div>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Place Order</button>
      </form>
    </div>
  </div>
</div>