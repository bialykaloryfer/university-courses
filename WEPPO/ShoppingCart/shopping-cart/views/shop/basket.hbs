{{#if products}}
<div class="row justify-content-center">
  <div class="col-md-6 col-md-offset-4" style="margin-top: 20px">
    <ul class="list-group">
      {{#each products}}
        <li class="list-group-item">
          <div class="row">
            <div class="col-md-8">
              <strong>{{this.item.title}}</strong>
              
            </div>
            <div class="col-md-4 text-end">
              <span class="label label-success">${{this.price}}</span>
              <span class="badge" style="background-color: grey">{{this.quantity}}</span>
            
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="btn-group float-end">
                <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">Options<span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                  <li><a class="dropdown-item" href="#">Reduce by 1</a></li>
                  <li><a class="dropdown-item" href="#">Remove All</a></li>
                </ul>
              </div>
            </div>
          </div>
        </li>
      {{/each}}
    </ul>
     <strong>Total price: ${{totalPrice}} </strong>
  </div>
</div>
<hr>
<div class="row justify-content-center">
  <div class="col-md-6">
    <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
  </div>
</div>
{{else}}

<div class="row justify-content-center">
  <div class="col-md-4 col-md-offset-4">
    <h2>No items in cart</h2>
  </div>
</div>
{{/if}}