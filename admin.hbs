<body>
  <div>
    <form action="/add_product" method="post">
      <div>
        <label for="filepath">File path:</label>
        <input type="text" name="filepath" id="filepath" />
      </div>

      <div>
        <label for="title">Title:</label>
        <input type="text" name="title" id="title" />
      </div>

      <div>
        <label for="description">Description:</label>
        <input type="text" name="description" id="description" />
      </div>

      <div>
        <label for="price">Price:</label>
        <input type="text" name="price" id="price" />
      </div>

      <button type="submit">Add</button>
    </form>

    <form action="/delete_product" method="post">
      <div>
        <label>Select Title to Delete:</label>
        <select name="deleteTitle" id="deleteTitle">
          {{#each products}}
            <option value="{{title}}">{{title}}</option>
          {{/each}} 
        </select>
      </div>

      <button type="submit">Delete</button>
    </form>


<form action="/edit_product" method="post">
  <div>
    <label>Select Title to Edit:</label>
    <select name="editTitle" id="editTitle">
      {{#each products}}
        <option value="{{title}}">{{title}}</option>
      {{/each}} 
    </select>
  </div>
  <div>
    <label for="new_title">New Title:</label>
    <input type="text" name="new_title" id="new_title" />
  </div>
  <div>
    <label for="filepath">File path:</label>
    <input type="text" name="filepath" id="filepath" />
  </div>
  <div>
    <label for="description">Description:</label>
    <input type="text" name="description" id="description" />
  </div>
  <div>
    <label for="price">Price:</label>
    <input type="text" name="price" id="price" />
  </div>

  <button type="submit">Edit</button>
</form>



    <h1>User List</h1>
    <ul>
      {{#each users}}
        <li>
          <strong>email:</strong> {{email}}<br>
        </li>
      {{/each}}
    </ul>

  <h1>Order List</h1>
  <ul>
    {{#each order}}
      <li>
        <strong>Customer Name:</strong> {{name}}<br>
        <strong>Order ID:</strong> {{_id}}<br>
        <strong>Products:</strong>
        <ul>
          {{#each cart.items}}
            <li>
              <strong>Title:</strong> {{this.item.title}}<br>
              <strong>Quantity:</strong> {{this.quantity}}<br>
            </li>
          {{/each}}
        </ul>
        <hr>
      </li>
    {{/each}}
  </ul>
  </div>
</body>
